#!/bin/sh

echo ""
echo "🔍 [1/3] TypeScript 컴파일 (타입 체크)..."
npm run compile || { echo "❌ 타입 에러가 있습니다!"; exit 1; }

echo "✨ [2/3] ESLint (코드 스타일 체크)..."
npm run lint || { echo "❌ 린트 에러가 있습니다!"; exit 1; }

echo "🧪 [3/3] Unit Tests (단위 테스트)..."
npm test -- run || { echo "❌ 테스트 실패!"; exit 1; }

echo ""
echo "✅ 모든 검사 통과! 푸시를 진행합니다. 🚀"
echo ""
